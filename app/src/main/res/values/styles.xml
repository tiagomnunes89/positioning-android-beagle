<resources>
    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Default" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DesignSystem.White.Text.Default" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DesignSystem.Text.White.Extra.Large" parent="DesignSystem.White.Text.Default">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="DesignSystem.Text.White.Large" parent="DesignSystem.White.Text.Default">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="DesignSystem.Text.White.Medium" parent="DesignSystem.White.Text.Default">
        <item name="android:textSize">16sp</item>
    </style>

    <style name= "DesignSystem.Text.White.Button" parent="DesignSystem.White.Text.Default">
        <item name="android:textSize">22sp</item>
    </style>

</resources>